<div class="table_invoice">
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr class="bg-primary">
        <th class='align_center'>Id</th>
        <th class='align_center'>Org Name</th>
        <th class='align_center'>Org Identifier</th>
        <th class='align_center'>Created By</th>
        <th class='align_center'>Country</th>
        <th class='align_center'>Created At</th>
        <th class='align_center'>Updated At</th>
      </tr>
    </thead>
    <tbody>
      <% @organizations.each do |org| %>
      <tr>
        <td class="align_center">
          <%= org.id%>
        </td>
        <td class="align_center">
          <%= org.org_name %>
        </td>
        <td class="align_center">
          <%= org.org_identifier %>
        </td>
        <td class="align_center">
        <% user = User.find_by(id: org.user_id) %>
          <%= user.email %>
        </td>
        <td class="align_center">
          <%= org.country %>
        </td>
        <td class="align_center">
          <%= org.created_at.strftime('%d-%m-%y %H:%M')%>
        </td>
        <td class="align_center">
          <%= org.updated_at.strftime('%d-%m-%y %H:%M')%>
        </td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>
<div class="flickr_pagination pagination-margin">
  <%= page_entries_info @organizations %>
  <%= will_paginate @organizations, container: false %>
</div>
